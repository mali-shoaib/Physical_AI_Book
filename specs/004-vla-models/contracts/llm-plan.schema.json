{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://physical-ai-textbook.org/schemas/llm-plan.schema.json",
  "title": "LLM Plan",
  "description": "Structured action sequence generated by language model to execute voice command",
  "type": "object",
  "required": [
    "plan_id",
    "source_command_id",
    "task_description",
    "action_list",
    "constraints",
    "safety_checks",
    "confidence_score",
    "timestamp",
    "llm_model_used"
  ],
  "properties": {
    "plan_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for this plan (UUID v4)"
    },
    "source_command_id": {
      "type": "string",
      "format": "uuid",
      "description": "Reference to originating Voice Command UUID"
    },
    "task_description": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "description": "Natural language summary of the task to be performed"
    },
    "action_list": {
      "type": "array",
      "minItems": 1,
      "maxItems": 20,
      "description": "Ordered sequence of actions to execute",
      "items": {
        "type": "object",
        "required": ["action_type", "goal_parameters", "timeout_seconds"],
        "properties": {
          "action_type": {
            "type": "string",
            "description": "ROS 2 action name",
            "examples": ["navigate_to_pose", "grasp_object", "detect_object", "follow_path"]
          },
          "goal_parameters": {
            "type": "object",
            "description": "Parameters for this action (schema varies by action_type)",
            "additionalProperties": true
          },
          "timeout_seconds": {
            "type": "number",
            "exclusiveMinimum": 0.0,
            "maximum": 300.0,
            "description": "Maximum time to wait for action completion"
          },
          "retry_count": {
            "type": "integer",
            "minimum": 0,
            "maximum": 3,
            "default": 0,
            "description": "Number of times to retry on failure"
          }
        },
        "additionalProperties": false
      }
    },
    "constraints": {
      "type": "array",
      "minItems": 0,
      "description": "Safety and workspace constraints",
      "items": {
        "type": "string",
        "examples": ["stay_within_workspace_bounds", "avoid_collision", "battery_level > 20%"]
      }
    },
    "safety_checks": {
      "type": "array",
      "minItems": 1,
      "description": "Validation rules that must pass before execution",
      "items": {
        "type": "object",
        "required": ["check_type", "condition", "error_message"],
        "properties": {
          "check_type": {
            "type": "string",
            "enum": ["workspace_bounds", "collision_check", "battery_level", "action_exists"],
            "description": "Type of safety validation"
          },
          "condition": {
            "type": "string",
            "description": "Condition that must be true (logical expression)"
          },
          "error_message": {
            "type": "string",
            "maxLength": 200,
            "description": "Message to display if check fails"
          }
        },
        "additionalProperties": false
      }
    },
    "estimated_duration_seconds": {
      "type": "number",
      "exclusiveMinimum": 0.0,
      "maximum": 600.0,
      "description": "LLM's estimate of total task duration"
    },
    "confidence_score": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0,
      "description": "LLM's confidence in plan validity"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "When plan was generated (ISO 8601 UTC format)"
    },
    "llm_model_used": {
      "type": "string",
      "description": "Which LLM generated this plan",
      "examples": ["gpt-4", "gpt-3.5-turbo", "llama-7b", "llama-13b"]
    },
    "prompt_tokens": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of tokens in prompt (for cost tracking)"
    },
    "completion_tokens": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of tokens in LLM response (for cost tracking)"
    },
    "parameters": {
      "type": "object",
      "description": "Additional task-specific parameters",
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
