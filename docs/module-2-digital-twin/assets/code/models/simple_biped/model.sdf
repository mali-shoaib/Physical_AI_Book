<?xml version="1.0"?>
<!--
  Simple Biped Humanoid Robot Model

  Educational model for Module 2: Digital Twin (Gazebo & Unity)
  Demonstrates basic humanoid kinematics with physics simulation

  Attribution: Physical AI & Humanoid Robotics Textbook
  License: MIT
  Gazebo Version: Fortress (6.x.x)
-->
<sdf version="1.8">
  <model name="simple_biped">
    <static>false</static>

    <!-- Base Link (Torso) -->
    <link name="torso">
      <pose>0 0 1.0 0 0 0</pose>

      <inertial>
        <mass>10.0</mass>
        <inertia>
          <ixx>0.1</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.1</iyy>
          <iyz>0</iyz>
          <izz>0.05</izz>
        </inertia>
      </inertial>

      <collision name="torso_collision">
        <geometry>
          <box>
            <size>0.3 0.2 0.5</size>
          </box>
        </geometry>
      </collision>

      <visual name="torso_visual">
        <geometry>
          <box>
            <size>0.3 0.2 0.5</size>
          </box>
        </geometry>
        <material>
          <ambient>0.2 0.2 0.8 1.0</ambient>
          <diffuse>0.2 0.2 0.8 1.0</diffuse>
        </material>
      </visual>
    </link>

    <!-- Left Thigh -->
    <link name="left_thigh">
      <pose>0 0.1 0.7 0 0 0</pose>

      <inertial>
        <mass>2.0</mass>
        <inertia>
          <ixx>0.02</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.02</iyy>
          <iyz>0</iyz>
          <izz>0.005</izz>
        </inertia>
      </inertial>

      <collision name="left_thigh_collision">
        <geometry>
          <cylinder>
            <radius>0.05</radius>
            <length>0.4</length>
          </cylinder>
        </geometry>
      </collision>

      <visual name="left_thigh_visual">
        <geometry>
          <cylinder>
            <radius>0.05</radius>
            <length>0.4</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.6 0.6 0.6 1.0</ambient>
          <diffuse>0.6 0.6 0.6 1.0</diffuse>
        </material>
      </visual>
    </link>

    <!-- Right Thigh -->
    <link name="right_thigh">
      <pose>0 -0.1 0.7 0 0 0</pose>

      <inertial>
        <mass>2.0</mass>
        <inertia>
          <ixx>0.02</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.02</iyy>
          <iyz>0</iyz>
          <izz>0.005</izz>
        </inertia>
      </inertial>

      <collision name="right_thigh_collision">
        <geometry>
          <cylinder>
            <radius>0.05</radius>
            <length>0.4</length>
          </cylinder>
        </geometry>
      </collision>

      <visual name="right_thigh_visual">
        <geometry>
          <cylinder>
            <radius>0.05</radius>
            <length>0.4</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.6 0.6 0.6 1.0</ambient>
          <diffuse>0.6 0.6 0.6 1.0</diffuse>
        </material>
      </visual>
    </link>

    <!-- Left Hip Joint -->
    <joint name="left_hip" type="revolute">
      <parent>torso</parent>
      <child>left_thigh</child>
      <pose>0 0 0.2 0 0 0</pose>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-1.57</lower>
          <upper>1.57</upper>
          <effort>100</effort>
          <velocity>2.0</velocity>
        </limit>
        <dynamics>
          <damping>0.1</damping>
          <friction>0.0</friction>
        </dynamics>
      </axis>
    </joint>

    <!-- Right Hip Joint -->
    <joint name="right_hip" type="revolute">
      <parent>torso</parent>
      <child>right_thigh</child>
      <pose>0 0 0.2 0 0 0</pose>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-1.57</lower>
          <upper>1.57</upper>
          <effort>100</effort>
          <velocity>2.0</velocity>
        </limit>
        <dynamics>
          <damping>0.1</damping>
          <friction>0.0</friction>
        </dynamics>
      </axis>
    </joint>

  </model>
</sdf>
